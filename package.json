{
  "name": "resdjavascript",
  "version": "1.0.0",
  "description": "Javascript files for RESD solution - includes shared validation and utility functions",
  "main": "index.js",
  "scripts": {
    "build-assessments": "browserify -t babelify -t browserify-css ./src/assessments/index.js -o ./build/RESD-CREATE-ASSESSMENTS.js",
    "build-confirmation": "browserify -t babelify -t browserify-css ./src/confirmation/index.js -o ./build/RESD-CREATE-CONFIRMATION.js",
    "build-guidance": "browserify -t babelify -t browserify-css ./src/guidance/index.js -o ./build/RESD-CREATE-GUIDANCE.js",
    "build-summary": "browserify -t babelify -t browserify-css ./src/summary/index.js -o ./build/RESD-CREATE-SUMMARY.js",
    "build-staff-process": "browserify -t babelify -t browserify-css ./src/staff-process/index.js -o ./build/RESD-PROCESS-PROCESS.js",
		"build-staff-search": "browserify -t babelify -t browserify-css ./src/staff-search/index.js -o ./build/RESD-SEARCH-START.js",
		"build-stu-view": "browserify -t babelify -t browserify-css ./src/stu-view/index.js -o ./build/RESD-STUVIEW-START.js",
    "watch-assessments": "watch \"npm run build-assessments\" ./src/assessments/",
    "watch-confirmation": "watch \"npm run build-confirmation\" ./src/confirmation/",
    "watch-guidance": "watch \"npm run build-guidance\" ./src/guidance/",
    "watch-summary": "watch \"npm run build-summary\" ./src/summary/",
    "watch-staff-process": "watch \"npm run build-staff-process\" ./src/staff-process/",
		"watch-staff-search": "watch \"npm run build-staff-search\" ./src/staff-search/",
		"watch-stu-view": "watch \"npm run build-stu-view\" ./src/stu-view/",
    "serve": "serve -s ./build",
    "all": "npm-run-all --parallel watch-assessments watch-summary watch-stu-view watch-staff-process watch-staff-search watch-guidance watch-confirmation serve",
    "test": "mocha --recursive --compilers js:babel-core/register || exit 0"
  },
  "keywords": [
    "RESD",
    "Javascript"
  ],
  "author": "SHU - PC1091",
  "license": "ISC",
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "chai": "^3.5.0",
    "jsdom": "^10.1.0",
    "mocha": "^3.3.0"
  },
  "dependencies": {
    "jquery": "^3.2.1",
    "toastr": "^2.1.2"
  },
  "browserify-css": {
    "autoInject": true,
    "minify": true,
    "rootDir": "."
  }
}
